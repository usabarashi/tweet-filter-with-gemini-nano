{
  "manifest_version": 3,
  "name": "Tweet Filter with Gemini Nano",
  "version": "1.0.0",
  "description": "Filter tweets using on-device AI with Gemini Nano",

  "permissions": [
    "storage",
    "offscreen"
  ],

  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],

  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content/index.js"],
      "css": ["content/index.css"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "options/index.html",

  "minimum_chrome_version": "131"
}
