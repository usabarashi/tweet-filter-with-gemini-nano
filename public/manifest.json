{
  "manifest_version": 3,
  "name": "Tweet Filter with Gemini Nano",
  "version": "1.0.0",
  "description": "Filter tweets using on-device AI with Gemini Nano",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "src/options/index.html",

  "minimum_chrome_version": "131"
}
